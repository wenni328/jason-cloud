<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="debug">
    <!--全局变量定义-->
    <Properties>
        <Property name="LOG_HOME">./logs</Property>
        <!--%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %l - %message%n-->
        <property name="pattern">%d{yyyy/MM/dd HH:mm:ss.SSS} [%p] %t %c %m%n</property>
    </Properties>
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %l - %message%n"/>
        </Console>

        <!--<RollingFile name="DebugRolling" fileName="${LOG_HOME}/debug.log"
                     filePattern="${LOG_HOME}/debug-%d{yyyy-MM-dd}.log">
            <ThresholdFilter level="debug" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout pattern="${pattern}"/>
            <Policies>
                <TimeBasedTriggeringPolicy modulate="true" interval="1"/>
            </Policies>
        </RollingFile>-->

        <RollingFile name="InfoRolling" fileName="${LOG_HOME}/info.log"
                     filePattern="${LOG_HOME}/info-%d{yyyy-MM-dd}.log">
            <ThresholdFilter level="info" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout pattern="${pattern}"/>
            <Policies>
                <TimeBasedTriggeringPolicy modulate="true" interval="1"/>
            </Policies>
        </RollingFile>
        <!--<RollingFile name="ErrorRolling" fileName="${LOG_HOME}/error.log"
                     filePattern="${LOG_HOME}/error-%d{yyyy-MM-dd}.log">
            <ThresholdFilter level="error" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout pattern="${pattern}"/>
            <Policies>
                <TimeBasedTriggeringPolicy modulate="true" interval="1"/>
            </Policies>
        </RollingFile>-->
        <!--sql打印-->

    </Appenders>


    <Loggers>
        <Logger name="org.apache.ibatis.logging.stdout.StdOutImpl" level="debug" additivity="true">
            <appender-ref ref="sqlFileLogger" level="debug"/>
        </Logger>

        <Root level="info">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="InfoRolling"/>
            <!--<AppenderRef ref="DebugRolling"/>
            <AppenderRef ref="ErrorRolling"/>-->
        </Root>
    </Loggers>
</Configuration>